[Unit]
Description=Kubernetes Kube Proxy {{ salt['pillar.get']('proxy:version') }}
Documentation=https://github.com/kubernetes/kubernetes

[Service]
LimitNOFILE=32768
LimitNOFILESoft=16384
ExecStart=/usr/local/bin/kube-proxy \
{%- for k, v in k8s_salt['kube-proxy']['flags'].items() %}
  --{{ k }}={{ v }}{% if not loop.last %} \{% endif %}{% endfor %}
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target

